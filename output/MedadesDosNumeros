#include<stdio.h>
#include<stdlib.h>

int main() {
    int i, num;
    float soma = 0.0, media;

    printf("Digite 10 numeros:\n");

    for (i = 1; i <= 10; ++i) {
        scanf("%d", &num);
        printf("Metade de %d = %d\n", num, num / 2);
        soma += num;
    }

    media = soma / 10;
    printf("Media = %.2f", media);

    return 0;
}